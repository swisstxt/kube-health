{
	"listen": "0.0.0.0:8080",
	"checks": [
		{
			"type": "ping",
			"url": "8.8.8.8",
			"timeout": 3,
			"ping": {
				"count": 3,
				"warning": 30,
				"error": 60
			}
		},
		{
			"type": "http",
			"url": "https://kubernetes.default.svc/healthz",
			"timeout": 3,
			"http": {
				"status": 200,
				"ca_certificates": "/var/run/secrets/kubernetes.io/serviceaccount/ca.crt"
			}
		},
		{
			"type": "http",
			"url": "https://raw.githubusercontent.com/swisstxt/kube-health/master/LICENSE",
			"timeout": 10,
			"http": {
				"status": 200,
				"contains": "Swiss TXT"
			}
		}
	]
}
